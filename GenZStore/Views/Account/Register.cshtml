@model IEnumerable<GenZStore.Models.Account>
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <link rel="stylesheet" href="~/Content/styles/login.css">
</head>
<div class="login-wrapper">

    <div class="login-image">
        <img src="~/Content/images/signup-background.jpg" alt="Login-image">
    </div>

    <div class="login-form">
        <h2>Create New Account</h2>
        <p class="description">Please enter detail</p>
        <form method="POST" action="/login">
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="firstname" placeholder="Robert" required>
            </div>
            <div class="form-group">
                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="lastname" placeholder="Fox" required>
            </div>
            <div class="form-group">
                <label for="phonenumber">Phone Number</label>
                <input type="text" id="phone" name="phone" placeholder="Fox" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Password"
                       required>
            </div>
            <button type="submit" class="btn">Sign Up</button>

        </form>
        <p class="register-link">Don't have an Account? <a href="@Url.Action("Login","Account")">Log In</a></p>
    </div>

</div>


