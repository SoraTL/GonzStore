
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Đăng Nhập</title>

    <link rel="stylesheet" href="~/Content/styles/login.css">
</head>
<div class="login-wrapper">

    <div class="login-image">
        <img src="~/Content/images/login-background.jpg" alt="Login-image">
    </div>

    <div class="login-form">
        <h2>Welcome</h2>
        <p class="description">Please login here</p>
        <form method="POST" action="/login">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter your username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input type="checkbox" id="remember" name="remember">
                <label for="remember">Remember Me</label>
            </div>
            <div class="form-group">
                <a href="/forgot-password" class="forgot-password-link">Forgot Password?</a>
            </div>
            <button type="submit" class="btn"></button>
            @Link
        </form>
        <p class="register-link">Don't have an Account? <a href="/register">Sign Up</a></p>
    </div>

</div>


